  <body>
	<div class="container-fluid">
	  <section id="login">
		  <div class="span4 offset4">
			<div class="well">
			  <legend>Acceder</legend>
			  <form method="POST" action="/login" accept-charset="UTF-8">
				  <div class="alert alert-error">
					<a class="close" data-dismiss="alert" href="#">x</a>Incorrect Username or Password!
				  </div>
				  <fieldset>
					
					<div class="input-prepend" title="Username" data-rel="tooltip">
						<span class="add-on">
						  <i class="icon-user"></i>
						</span>
						<input autofocus class="span3" placeholder="username..." name="username" id="username" type="text"/>
					</div>
					<div class="clearfix"></div>

					<div class="input-prepend" title="Password" data-rel="tooltip">
						<span class="add-on">
						  <i class="icon-lock"></i>
						</span>
						<input class="span3" name="password" id="password" type="password" />
						
					</div>
					<div class="clearfix"></div>

					<label class="checkbox">
					  <input type="checkbox" name="remember" value="1"> Remember Me
					</label>
					<button class="btn-primary btn" type="submit">Login</button>      
				  </fieldset>

			  </form>    
			</div>
		  </div>
		  
	  </section>
	  
